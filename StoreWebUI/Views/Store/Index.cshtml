@{
}

@model IEnumerable<StoreWebUI.Models.StoreVM>

<h1 class="display-4">Store Locations</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StoreVM item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.StoreId)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreAddress)</td>
            <td>
                <button class="btn btn-primary">@Html.ActionLink("Inventory", "Index", "Inventory", new { p_id = item.StoreId }, new { @style = "Color: white;" })</button>
            </td>

        </tr>
        }
    </tbody>
</table>