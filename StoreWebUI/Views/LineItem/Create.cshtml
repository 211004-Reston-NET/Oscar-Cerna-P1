@{
    IEnumerable<ProductVM> products = ViewData["products"] as IEnumerable<ProductVM>;
    IEnumerable<OrderVM> orders = ViewData["orders"] as IEnumerable<OrderVM>;
}

@model StoreWebUI.Models.LineItemsVM

<br />
<h2 class="text-info">Add Item</h2>
<br />
<form asp-action="Create">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductId">Product</label>
                </div>
                <div class="col-8">
                    <select asp-for="ProductId" class="form-control">
                        <option selected>Select Item</option>
                        @foreach (var item in ViewData["product"] as IEnumerable<Models.Product>)
                        {
                            <option value="@item.ProductId">@item.ProductName</option>
                        }
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderId">Order No.</label>
                </div>
                <div class="col-8">
                    <select asp-for="OrderId" class="form-control">
                        <option selected>Select Order No.</option>
                        @foreach (var item in ViewData["order"] as IEnumerable<Models.Orders>)
                        {
                            <option value="@item.OrderId">@item.OrderId</option>
                        }
                    </select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Quantity"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Quantity" type="number" min="1" value="1" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success" value="Create">Add Item</button>
                <a href="https://localhost:44306/Order/Create">
                    <button type="button" class="btn btn-secondary">Back</button>
                </a>
            </div>
        </div>
</form>